<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Style for the buttons of the main layout. -->
    <style name="MainButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for the TextViews below the buttons of the main layout. -->
    <style name="MainTextBelowButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Style for the team title TextViews at Tejo Counter layout- -->
    <style name="TejoTeamHeaders">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <!-- Style for the score's TextViews at Tejo Counter Layout. -->
    <style name="TejoScoreTextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Style for the buttons at Tejo Counter layout -->
    <style name="TejoButtonsForEachTeam">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Style fot TextViews which become visible if a team reaches 27 points and hence wins the
            game at Tejo Counter layout -->
    <style name="TejoWinnerTextViews">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:text">@string/tejo_winner</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0</item>
    </style>

    <!-- Style for the buttons at the bottom of the Tejo Counter layout. -->
    <style name="TejoMenuButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
    </style>

    <!-- Style for the RadioButtons at questions layout. -->
    <style name="QuestionRadioButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for the CheckBoxes at questions_layout. -->
    <style name="QuestionCheckBoxes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- Style for the TestResults Activity -->
    <style name="TestResults" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Style for the TextViews of the TestResults Activity -->
    <style name="TextViewsResults">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- Style for the Buttons of TestResults Activity -->
    <style name="ButtonsResults">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Style for the TextViews in the song_layout.xml file -->
    <style name="SongSmallTextViews">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for the horizontal LinearLayouts in the song_layout.xml file -->
    <style name="SongHorizontalLinearLayouts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Style defined for Song Name TextViews in the song_layout.xml file and
            activity_music_player.xml file -->
    <style name="SongName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for the TextViews in the activity_music_player.xml file -->
    <style name="MusicPlayerTextViews">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for the horizontal LinearLayouts in the activity_music_player.xml file -->
    <style name="MusicPlayerHorizontalLinearLayouts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Style for Song Pircture ImageViews in the song_layout.xml file and
        activity_music_player.xml file -->
    <style name="SongPicture">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Style for control icons at activity_music_player.xml file -->
    <style name="MusicPlayerIcons">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Style for helper text below control icons at activity_music_player.xml file -->
    <style name="MusicPlayerHelperText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for copyright TextViews at various activities -->
    <style name="CopyrightTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textColorLink">@android:color/holo_blue_light</item>
        <item name="android:textSize">10sp</item>
    </style>

</resources>