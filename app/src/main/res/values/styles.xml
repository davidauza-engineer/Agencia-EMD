<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fe5c5c</item>
        <item name="colorPrimaryDark">#c52332</item>
        <item name="colorAccent">#FFC107</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Style for the buttons of the main layout. -->
    <style name="buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for the TextViews below the buttons. -->
    <style name="text_views_below_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <!-- Style for the team title TextViews at TejoCounter activity -->
    <style name="team_titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <!-- Style for the score's TextViews. -->
    <style name="score_text_views">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Style for the buttons at TejoCounter activity -->
    <style name="tejo_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

</resources>
