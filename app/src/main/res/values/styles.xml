<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Style for the buttons of activity_main.xml -->
    <style name="MainButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for the TextViews below the buttons of activity_main.xml -->
    <style name="MainTextBelowButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Style for the team title TextViews at activity_tejo_counter.xml -->
    <style name="TejoCounterTeamHeadersStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <!-- Style for the score's TextViews at activity_tejo_counter.xml -->
    <style name="TejoCounterScoreTextViewsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Style for the buttons at activity_tejo_counter.xml -->
    <style name="TejoCounterButtonsForEachTeamStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Style fot TextViews which become visible if a team reaches 27 points and hence wins the
            game at activity_tejo_counter.xml -->
    <style name="TejoCounterWinnerTextViewsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:text">@string/tejo_counter_winner</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0</item>
    </style>

    <!-- Style for the buttons at the bottom of activity_tejo_counter.xml -->
    <style name="TejoCounterMenuButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
    </style>

    <!-- Style for the RadioButtons at item_question.xml -->
    <style name="QuestionRadioButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Style for the CheckBoxes at item_question.xml -->
    <style name="QuestionCheckBoxesStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- Style for the TestResultsActivity -->
    <style name="TestResultsStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Style for the TextViews of the activity_test_results.xml -->
    <style name="TestResultsTextViewsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- Style for the Buttons of activity_test_results.xml -->
    <style name="TestResultsButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Style for the TextViews in item_song.xml -->
    <style name="SongSmallTextViewsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for the horizontal LinearLayouts in item_song.xml -->
    <style name="SongHorizontalLinearLayoutsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Style defined for Song Name TextViews in the item_song.xml file and
            activity_music_player.xml file -->
    <style name="SongNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for the TextViews in the activity_music_player.xml file -->
    <style name="MusicPlayerTextViewsStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for the horizontal LinearLayouts in the activity_music_player.xml file -->
    <style name="MusicPlayerHorizontalLinearLayoutsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Style for Song Picture ImageViews in the item_song.xml file and activity_music_player.xml
            file -->
    <style name="SongPictureStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <!-- Style for control icons at activity_music_player.xml file -->
    <style name="MusicPlayerIconsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- Style for helper text below control icons at activity_music_player.xml file -->
    <style name="MusicPlayerHelperTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for copyright TextViews at various activities -->
    <style name="MainCopyrightTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textColorLink">@android:color/holo_blue_light</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Style for timer TextViews at activity_music_player.xml file -->
    <style name="MusicPlayerSongTimerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for the vertical LinearLayouts containing the icons at activity_music_player.xml
            file -->
    <style name="MusicPlayerLinearLayoutsIconsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>