<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <!-- Style for the buttons of the main layout. -->
    <style name="buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style for the TextViews below the buttons of the main layout. -->
    <style name="text_views_below_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <!-- Style for the team title TextViews at Tejo Counter layout- -->
    <style name="team_titles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <!-- Style for the score's TextViews at Tejo Counter Layout. -->
    <style name="score_text_views">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Style for the buttons at Tejo Counter layout -->
    <style name="tejo_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Style fot TextViews which become visible if a team reaches 27 points and hence wins the
            game at Tejo Counter layout -->
    <style name="winner_text_views">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:text">@string/tejo_winner</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">0</item>
    </style>

    <!-- Style for the buttons at the bottom of the Tejo Counter layout. -->
    <style name="menu_buttons_tejo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingLeft">24dp</item>
    </style>


</resources>
